.EventoCard
    background-color: color-white
    overflow: hidden
    position: relative
    .EventoCard-content
        padding: 10px
        margin-left: 240px
        overflow: hidden
        > p
            margin: 0
            &:first-child
                font-size: 1.25rem
                color: color-strong-blue
        .EventoCard-content-afiche
            padding: 5px 0px
            margin-top: 10px
            border-top: 1px solid color-gray-b
            left: 250px
            right: 10px
            bottom: 0
            position: absolute
            display: block
        .EventoCard-content-info
            color: color-black-b
            p
                margin: 0px 0px 10px 0px
                span
                    font-size: 0.875rem
    
    .EventoCard-logo
        font-size: 0px
        float: left
        margin: 0
        img
            width: 100%

@media screen and (min-width:320px)
    .EventoCard
        .EventoCard-content
            margin-left: 180px
            padding: 5px
            .EventoCard-content-title
                font-size: 1rem !important
            .EventoCard-content-info
                p
                    margin-bottom: 0px
                    span
                        display: block
                        margin-left: 0px !important
            .EventoCard-content-description
                display: none
            .EventoCard-content-afiche
                display: none
        .EventoCard-logo
            width: 180px

@media screen and (min-width:510px)
    .EventoCard
        .EventoCard-content
            margin-left: 220px
            padding: 10px
            .EventoCard-content-afiche
                left: 230px
                display: block
        .EventoCard-logo
            width: 220px

@media screen and (min-width:768px)
    .EventoCard
        .EventoCard-content
            .EventoCard-content-title
                font-size: 1.25rem !important
            .EventoCard-content-info
                p
                    margin-bottom: 0px
                    span
                        display: inline-block
                        &:last-child
                            margin-left: 10px !important
            .EventoCard-content-description
                display: block