@import "nib"
.Header
    background: color-lime-green
    font-size: 0px
    font-weight: bold
    text-transform: uppercase

    .Header-logo
        font-size: 0px
        overflow: hidden

    .Header-nav
        font-size: 16px
        line-height: 35px
        ul
            list-style: none
            li
                margin: 0px
                a
                    color: color-white
                    text-decoration: none
     .Header-buttons
        color: color-white
        margin-top: -1px
        
        .Header-buttons-searchButton
            padding-right: 0px !important
            span
                padding-right: 10px
                border-right: 2px solid color-white
        .Header-buttons-searchButton, .Header-buttons-menuButton
            background-color: transparent
            border-radius: 10%
            border: none
            font-size: 0px
            outline: none
            &:hover
                background-color: color-dark-cyan
    

@media screen and (min-width:320px)
    .Header
        position: relative
        overflow: hidden
        .Header-buttons
            position: absolute
            display: inline-block
            float: right
            top: 10px
            right: 10px
            .Header-buttons-searchButton, .Header-buttons-menuButton
                padding: 5.5px 10px
                span
                    font-size: 24px

        .Header-container
            padding: 0px

        .Header-logo
            display: block
            padding: 10px !important
        .Header-nav
            display: block
            background-color: color-dark-cyan
            padding: 10px
            ul
                margin: 0px
                padding: 0px
                li
                    text-align: center
                    display: block
                    padding: 10px 0px
                    border-bottom: 1px solid rgba(color-white,30%)
                    &:first-child
                        padding: 0px 0px 10px 0px 
                    &:last-child
                        border-bottom: none
                        padding: 10px 0px 0px 0px 
                    a
                        display: block
                        border-radius: 0%
                        &:hover
                            background-color: color-lime-green
        
@media screen and (min-width:501px)
    body
        background-color: red !important
    .Header
        font-size: 0px !important
        overflow: hidden
        .Header-buttons 
            position: static
            .Header-buttons-menuButton
                display: none

            .Header-buttons-searchButton, .Header-buttons-menuButton
                padding: 9.5px 10px
                span
                    font-size: 16px

        .Header-container
            padding: 10px
            overflow: hidden
        .Header-logo
            margin: 0px !important
            font-size: 0px !important
            padding: 0px !important
            float: left
        .Header-nav
            background-color: transparent
            line-height: 35px
            font-size: 16px
            margin: 0
            padding: 0px 10px 0px 0px
            ul
                margin: 0px
                padding: 0px
                li
                    display: inline-block
                    border: none
                    margin: 0px 
                    padding: 0px !important
                    a
                        padding: 0px 5px
                        border-radius: 5%
                        &:hover
                            background-color: color-dark-cyan
        
        .Header-buttons, .Header-nav
            float: right !important
        .Header-logo, .Header-buttons, .Header-nav
            display: inline-block

    .Header--searchActive
        .Header-buttons
            .Header-buttons-menuButton
                position: static
                display: inline
        .Header-nav
            display: none

@media screen and (min-width:768px)
    .Header
        .Header-nav
            ul
                li
                    a
                        padding: 0px 10px
    .Header--searchActive
        .Header-buttons
            .Header-buttons-menuButton
                display: none
        .Header-nav
            display: inline-block
@media screen and (min-width:1021px)
    .Header
        .Header-container
            width: 1000px
            margin: 0 auto