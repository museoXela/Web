.u-container
    padding: 0.625rem

.u-input
    background-color: color-white
    border-radius: 5px
    border: 1px solid color-gray-b
    box-sizing: border-box
    color: color-black
    font-weight: normal
    outline: none
    padding: 10px
    &:focus
        border: 1px solid color-pure-blue
        box-shadow: 0px 0px 5px color-pure-blue;
    &::-webkit-input-placeholder
        color: color-gray-b
    &:-moz-placeholder
        color: color-gray-b 
    &::-moz-placeholder  /* Firefox 19+ */
        color: color-gray-b 
    &:-ms-input-placeholder
        color: color-gray-b
.u-boton
    background-color: color-pure-blue
    border-radius: 5px
    border: none
    box-sizing: border-box
    color: color-white
    font-weight: bold
    outline: none
    padding: 10px 20px
    &:hover, &:focus
        background-color: color-pure-blue-l
        box-shadow: 1px 1px 5px color-black;
    &:active
        background-color: color-pure-blue-b
.u-enlaces
    color: color-strong-blue
    font-size: 1rem
    text-decoration: none
    &:hover
        text-decoration: underline

.u-mensajeResultados
    color: color-black
    font-weight: normal
    margin-bottom: 10px