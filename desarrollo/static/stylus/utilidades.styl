.u-container
    padding: 0.625rem
.u-input
    background-color: color-white
    border-radius: 5px
    border: 1px solid color-gray-b
    color: color-black
    font-weight: normal
    outline: none
    padding: 10px
    box-sizing: border-box;
    &:focus
        border: 1px solid color-pure-blue
        box-shadow: 0 0 5px color-pure-blue;
    &::-webkit-input-placeholder
        color: color-gray-b
    &:-moz-placeholder
        color: color-gray-b 
    &::-moz-placeholder  /* Firefox 19+ */
        color: color-gray-b 
    &:-ms-input-placeholder
        color: color-gray-b
