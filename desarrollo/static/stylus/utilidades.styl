@import "iconos.styl"
.u-container
    padding: 0.625rem

.u-input
    background-color: color-white
    border-radius: 5px
    border: 1px solid color-gray-b
    box-sizing: border-box
    color: color-black
    font-weight: normal
    outline: none
    padding: 10px
    &:focus
        border: 1px solid color-pure-blue
        box-shadow: 0px 0px 5px color-pure-blue;
    &::-webkit-input-placeholder
        color: color-gray-b
    &:-moz-placeholder
        color: color-gray-b 
    &::-moz-placeholder  /* Firefox 19+ */
        color: color-gray-b 
    &:-ms-input-placeholder
        color: color-gray-b
.u-boton
    background-color: color-pure-blue
    border-radius: 5px
    border: none
    box-sizing: border-box
    color: color-white
    font-weight: bold
    outline: none
    padding: 10px 20px
    &:hover, &:focus
        background-color: color-pure-blue-l
        box-shadow: 1px 1px 5px color-black;
    &:active
        background-color: color-pure-blue-b

.u-checkbox
    border-radius: 5px
    input[type=checkbox]:checked + label
        font-family: 'icomoon'
        &:before
            content: "\e60b"
    label
        &:hover
            cursor: pointer
.u-radio
    border-radius: 50%
    input[type=radio]:checked + label
        background-color: color-strong-blue
        border-radius: 50%
        bottom: 20%
        left: 20%
        right: 20%
        top: 20%
.u-select
    display: inline-block
    font-family: icomoon
    select
        appearance: none
        background-color: color-white
        border-radius: 5px
        border: 1px solid color-gray-b
        box-sizing: border-box
        color: color-black
        font-weight: normal
        outline: none
        padding: 7.5px 35px 7.5px 5px
        background: url(../img/arrow-down.png) no-repeat 97% center
        > option
            background-color: white
            color: color-black-b
            padding: 10px
            display: block
        &:after
            content: "\e607"
            margin-left: -20px
        &:focus
            background-color: color-gray
            background-image: url(../img/arrow-down-select.png)
        &:hover
            border-color: color-pure-blue
            background-image: url(../img/arrow-down-select.png)
            box-shadow: 0px 0px 5px color-pure-blue
.u-radio, .u-checkbox
    background-color: color-white
    border: 1px solid color-gray-b
    display: inline-block
    height: 24px
    position: relative
    width: 24px
    label
        bottom: 0
        color: color-strong-blue
        display: block
        font-size: 1.25rem
        left: 0
        padding: 2px 0px
        position: absolute
        right: 0
        text-align: center
        top: 0
        user-select: none
        &:hover
            cursor: pointer
    input[type=checkbox], input[type=radio]
        visibility: hidden

.u-enlaces
    color: color-strong-blue
    font-size: 1rem
    text-decoration: none
    &:hover
        text-decoration: underline

.u-mensajeResultados
    color: color-black
    font-weight: normal
    margin-bottom: 10px